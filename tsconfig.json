{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "lib": ["es6", "es7", "dom"],
    "allowSyntheticDefaultImports": true,
    "types": [
      "./node_modules/@types",
      "./@types"
    ],
  },
  "compileOnSave": true,
  "include": [ "./src/**/*", ],
  "exclude": ["build", "node_modules"]
}
